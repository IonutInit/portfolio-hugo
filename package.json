{
  "name": "portfolio-hugo",
  "version": "0.1.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "hugo server --gc --disableFastRender",
    "dev:preview": "npm run dev -- --buildDrafts --buildFuture",
    "build": "cross-env HUGO_ENVIRONMENT=production hugo -v --gc --minify --cleanDestinationDir",
    "renderToDisk": "hugo server --gc --disableFastRender --renderToDisk --cleanDestinationDir ",
    "renderToDisk:preview": "npm run renderToDisk -- --buildDrafts --buildFuture ",
    "renderToDisk:production": "npm run renderToDisk -- --minify --environment production",
    "format": "prettier --write \"./**/*.{html,js}\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.30",
    "postcss-cli": "^10.1.0",
    "tailwindcss": "^3.3.3"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "prettier": "^3.0.3",
    "prettier-plugin-go-template": "^0.0.15"
  }
}
